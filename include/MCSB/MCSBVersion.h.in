/// \file MCSBVersion.h
/// \brief Compile-time version of the MCSB library for use by client programs.

#ifndef MCSB_MCSBVersion_h
#define MCSB_MCSBVersion_h
#pragma once

/// Compile-time major version of MCSB library.
#define MCSB_MAJOR_VERSION ${MCSB_MAJOR_VERSION}

/// Compile-time minor version of MCSB library.
#define MCSB_MINOR_VERSION ${MCSB_MINOR_VERSION}

/// Compile-time patch version of MCSB library.
#define MCSB_PATCH_VERSION ${MCSB_PATCH_VERSION}

/// Compile-time version of MCSB library as a hexadecimal number.
#define MCSB_VERSION_HEX ${MCSB_VERSION_HEX}

/// Compile-time version of MCSB library as a string.
#define MCSB_VERSION "${MCSB_VERSION}"

#endif
